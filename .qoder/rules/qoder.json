{
  "context": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/app/**/*",
      "src/components/**/*",
      "src/features/**/*",
      "src/hooks/**/*",
      "src/lib/**/*",
      "src/types/**/*",
      "src/utils/**/*",
      "next.config.*",
      "package.json",
      "tsconfig*.json",
      "postcss.config.*",
      "tailwind.config.*",
      ".eslintrc.*",
      ".prettierrc*",
      ".qoder/project-context.md",
      ".qoder/rules.md"
    ],
    "exclude": [
      "node_modules/**",
      ".next/**",
      ".vercel/**",
      "dist/**",
      "build/**",
      "coverage/**"
    ]
  },
  "settings": {
    "default_language": "typescript",
    "strict_typing": true,
    "style": "tailwind_shadcn",
    "ui_framework": "tailwind",
    "router": "next-app-router",
    "data_layer": "tanstack-query",
    "backend": "supabase",
    "lint_enabled": true,
    "testing_framework": "jest"
  }
}